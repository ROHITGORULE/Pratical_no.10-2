<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STUDENT REGISTRATION FORM"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll No:"
        android:textSize="20dp"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/edit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter roll no"
        android:ems="10"
        android:selectAllOnFocus="true"
        android:layout_below="@+id/txt6"
        android:minHeight="48dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name"
        android:layout_below="@+id/edit1"
        android:layout_marginLeft="40dp"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/ed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter full Name"
        android:ems="10"
        android:minHeight="48dp"
        android:inputType="text"
        android:layout_below="@+id/txt2"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/txt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class:"
        android:textSize="20dp"
        android:layout_below="@+id/ed1"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/edit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter class"
        android:selectAllOnFocus="true"
        android:ems="10"
        android:layout_below="@+id/txt7"
        android:minHeight="48dp"
        android:layout_marginLeft="40dp" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Contact No."
        android:layout_below="@+id/edit3"
        android:layout_marginLeft="40dp"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/ed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Contact No."
        android:ems="10"
        android:minHeight="48dp"
        android:inputType="number"
        android:layout_below="@+id/txt3"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/txt8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address:"
        android:textSize="20dp"
        android:layout_below="@id/ed2"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/edit4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter email Address"
        android:selectAllOnFocus="true"
        android:ems="10"
        android:layout_below="@id/txt8"
        android:minHeight="48dp"
        android:layout_marginLeft="40dp"/>



    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Address"
        android:layout_below="@+id/edit4"
        android:layout_marginLeft="40dp"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/ed3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Address"
        android:ems="10"
        android:minHeight="48dp"
        android:inputType="text"
        android:layout_below="@+id/txt4"
        android:layout_marginLeft="40dp" />


    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="140dp"
        android:layout_below="@+id/ed3"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>